<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="AudioRecorder.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AudioRecorder"
    xmlns:views="using:AudioRecorder.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <!-- Р›РµРІР°СЏ РїР°РЅРµР»СЊ РЅР°СЃС‚СЂРѕРµРє (СЃРІРѕСЂР°С‡РёРІР°РµРјР°СЏ) -->
                <ColumnDefinition x:Name="SettingsColumn" Width="280" />
                <!-- РљРЅРѕРїРєР° СЃРІРѕСЂР°С‡РёРІР°РЅРёСЏ -->
                <ColumnDefinition Width="Auto" />
                <!-- Р¦РµРЅС‚СЂР°Р»СЊРЅР°СЏ РїР°РЅРµР»СЊ СѓРїСЂР°РІР»РµРЅРёСЏ -->
                <ColumnDefinition Width="320" />
                <!-- РџСЂР°РІР°СЏ РїР°РЅРµР»СЊ С‚СЂР°РЅСЃРєСЂРёРїС†РёРё -->
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- РљРѕР»РѕРЅРєР° 0: РџР°РЅРµР»СЊ РЅР°СЃС‚СЂРѕРµРє -->
            <Border
                x:Name="SettingsPanel"
                Grid.Column="0"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,0,1,0"
                Padding="16">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="16">
                        <TextBlock
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="РќР°СЃС‚СЂРѕР№РєРё" />

                        <!-- РџР°РїРєР° СЃРѕС…СЂР°РЅРµРЅРёСЏ -->
                        <StackPanel Spacing="4">
                            <TextBlock
                                FontSize="12"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="РџР°РїРєР° РґР»СЏ Р·Р°РїРёСЃРµР№" />
                            <Grid ColumnSpacing="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    x:Name="OutputFolderTextBox"
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Text="..."
                                    TextTrimming="CharacterEllipsis"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <Button
                                    Grid.Column="1"
                                    Click="OnSelectFolderClicked"
                                    Content="..."
                                    Padding="8,4"
                                    ToolTipService.ToolTip="Р’С‹Р±СЂР°С‚СЊ РїР°РїРєСѓ" />
                            </Grid>
                        </StackPanel>

                        <!-- РСЃС‚РѕС‡РЅРёРєРё Р’Р«Р’РћР”Рђ -->
                        <StackPanel Spacing="4">
                            <TextBlock
                                FontSize="12"
                                FontWeight="SemiBold"
                                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                Text="Р’С‹РІРѕРґ (СЃРёСЃС‚РµРјРЅС‹Р№ Р·РІСѓРє)" />
                            <Border
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                MaxHeight="120">
                                <ListView
                                    x:Name="OutputSourcesListView"
                                    SelectionMode="None"
                                    ItemsSource="{x:Bind OutputSources, Mode=OneWay}">
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="Padding" Value="4,2" />
                                            <Setter Property="MinHeight" Value="32" />
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                    <ListView.ItemTemplate>
                                        <DataTemplate x:DataType="views:AudioSourceViewModel">
                                            <CheckBox
                                                IsChecked="{x:Bind IsSelected, Mode=TwoWay}"
                                                Checked="OnSourceSelectionChanged"
                                                Unchecked="OnSourceSelectionChanged"
                                                MaxWidth="220"
                                                ToolTipService.ToolTip="{x:Bind Source.Name}">
                                                <TextBlock
                                                    Text="{x:Bind Source.Name}"
                                                    TextTrimming="CharacterEllipsis"
                                                    MaxWidth="180" />
                                            </CheckBox>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Border>
                        </StackPanel>

                        <!-- РСЃС‚РѕС‡РЅРёРєРё Р’Р’РћР”Рђ -->
                        <StackPanel Spacing="4">
                            <TextBlock
                                FontSize="12"
                                FontWeight="SemiBold"
                                Foreground="{ThemeResource AccentTextFillColorSecondaryBrush}"
                                Text="Р’РІРѕРґ (РјРёРєСЂРѕС„РѕРЅС‹)" />
                            <Border
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                MaxHeight="120">
                                <ListView
                                    x:Name="InputSourcesListView"
                                    SelectionMode="None"
                                    ItemsSource="{x:Bind InputSources, Mode=OneWay}">
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="Padding" Value="4,2" />
                                            <Setter Property="MinHeight" Value="32" />
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                    <ListView.ItemTemplate>
                                        <DataTemplate x:DataType="views:AudioSourceViewModel">
                                            <CheckBox
                                                IsChecked="{x:Bind IsSelected, Mode=TwoWay}"
                                                Checked="OnSourceSelectionChanged"
                                                Unchecked="OnSourceSelectionChanged"
                                                MaxWidth="220"
                                                ToolTipService.ToolTip="{x:Bind Source.Name}">
                                                <TextBlock
                                                    Text="{x:Bind Source.Name}"
                                                    TextTrimming="CharacterEllipsis"
                                                    MaxWidth="180" />
                                            </CheckBox>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Border>
                        </StackPanel>

                        <!-- РћР±РЅРѕРІР»РµРЅРёСЏ РїСЂРёР»РѕР¶РµРЅРёСЏ -->
                        <StackPanel Spacing="8">
                            <TextBlock
                                FontSize="12"
                                FontWeight="SemiBold"
                                Text="РћР±РЅРѕРІР»РµРЅРёСЏ" />

                            <Button
                                x:Name="CheckUpdatesButton"
                                Click="OnCheckUpdatesClicked"
                                Content="РџСЂРѕРІРµСЂРёС‚СЊ РѕР±РЅРѕРІР»РµРЅРёСЏ" />

                            <ProgressBar
                                x:Name="UpdateProgressBar"
                                Minimum="0"
                                Maximum="100"
                                Height="4"
                                Visibility="Collapsed" />

                            <TextBlock
                                x:Name="UpdateStatusText"
                                FontSize="11"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="РЎС‚Р°С‚СѓСЃ: РЅРµ РїСЂРѕРІРµСЂСЏР»РѕСЃСЊ"
                                TextWrapping="Wrap" />

                            <Button
                                x:Name="ApplyUpdateButton"
                                Click="OnApplyUpdateClicked"
                                Content="РЈСЃС‚Р°РЅРѕРІРёС‚СЊ РѕР±РЅРѕРІР»РµРЅРёРµ"
                                Visibility="Collapsed"
                                Style="{StaticResource AccentButtonStyle}" />
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- РљРѕР»РѕРЅРєР° 1: РљРЅРѕРїРєР° СЃРІРѕСЂР°С‡РёРІР°РЅРёСЏ -->
            <ToggleButton
                x:Name="ToggleSettingsButton"
                Grid.Column="1"
                VerticalAlignment="Center"
                Click="OnToggleSettingsClicked"
                Content="В«"
                ToolTipService.ToolTip="РЎРІРµСЂРЅСѓС‚СЊ/СЂР°Р·РІРµСЂРЅСѓС‚СЊ РЅР°СЃС‚СЂРѕР№РєРё"
                Width="24"
                Padding="0"
                Background="Transparent"
                BorderThickness="0" />

            <!-- РљРѕР»РѕРЅРєР° 2: РџР°РЅРµР»СЊ СѓРїСЂР°РІР»РµРЅРёСЏ -->
            <Border
                Grid.Column="2"
                Padding="16">
                <StackPanel Spacing="16">
                    <TextBlock
                        FontSize="20"
                        FontWeight="SemiBold"
                        Text="Contora" />

                    <!-- РЎС‚Р°С‚СѓСЃ Р·Р°РїРёСЃРё -->
                    <Border
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="12">
                        <StackPanel Spacing="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,8,4" Text="РЎС‚Р°С‚СѓСЃ:" />
                                <TextBlock x:Name="StateTextBlock" Grid.Row="0" Grid.Column="1" Margin="0,0,0,4" FontWeight="SemiBold" Text="РћСЃС‚Р°РЅРѕРІР»РµРЅРѕ" />

                                <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,8,4" Text="Р’СЂРµРјСЏ:" />
                                <TextBlock x:Name="DurationTextBlock" Grid.Row="1" Grid.Column="1" Margin="0,0,0,4" Text="00:00:00" />

                                <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,0,8,0" Text="Р Р°Р·РјРµСЂ:" />
                                <TextBlock x:Name="FileSizeTextBlock" Grid.Row="2" Grid.Column="1" Text="0 MB" />
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- РРјСЏ С‚РµРєСѓС‰РµРіРѕ С„Р°Р№Р»Р° -->
                    <TextBlock
                        x:Name="CurrentFileTextBlock"
                        FontSize="12"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Text=""
                        TextTrimming="CharacterEllipsis"
                        ToolTipService.ToolTip="{x:Bind CurrentFileTextBlock.Text, Mode=OneWay}" />

                    <!-- РљРЅРѕРїРєРё Р·Р°РїРёСЃРё -->
                    <Grid ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Button
                            x:Name="StartStopButton"
                            Grid.Column="0"
                            HorizontalAlignment="Stretch"
                            Click="OnStartStopClicked"
                            Content="РќР°С‡Р°С‚СЊ Р·Р°РїРёСЃСЊ"
                            IsEnabled="False"
                            Style="{StaticResource AccentButtonStyle}" />

                        <Button
                            x:Name="PauseResumeButton"
                            Grid.Column="1"
                            HorizontalAlignment="Stretch"
                            Click="OnPauseResumeClicked"
                            Content="РџР°СѓР·Р°"
                            IsEnabled="False" />
                    </Grid>

                    <!-- РРјРїРѕСЂС‚ С„Р°Р№Р»Р° -->
                    <Button
                        x:Name="ImportButton"
                        HorizontalAlignment="Stretch"
                        Click="OnImportClicked"
                        Content="РРјРїРѕСЂС‚РёСЂРѕРІР°С‚СЊ С„Р°Р№Р»" />

                    <!-- РЎРµРєС†РёСЏ С‚СЂР°РЅСЃРєСЂРёРїС†РёРё -->
                    <Border
                        x:Name="TranscriptionControlSection"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="12"
                        Visibility="Collapsed">
                        <StackPanel Spacing="8">
                            <TextBlock FontSize="14" FontWeight="Medium" Text="РўСЂР°РЅСЃРєСЂРёРїС†РёСЏ" />

                            <!-- РџСЂРѕРіСЂРµСЃСЃ -->
                            <StackPanel x:Name="TranscriptionProgressPanel" Spacing="8" Visibility="Collapsed">
                                <ProgressBar
                                    x:Name="TranscriptionProgressBar"
                                    Minimum="0"
                                    Maximum="100"
                                    IsIndeterminate="True"
                                    Height="4" />

                                <!-- РћСЃРЅРѕРІРЅРѕР№ СЃС‚Р°С‚СѓСЃ -->
                                <TextBlock
                                    x:Name="TranscriptionStatusText"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Text="РџРѕРґРіРѕС‚РѕРІРєР°..." />

                                <!-- Р”РµС‚Р°Р»СЊРЅР°СЏ РёРЅС„РѕСЂРјР°С†РёСЏ -->
                                <Grid x:Name="TranscriptionDetailsGrid" Visibility="Collapsed">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="РџСЂРѕС€Р»Рѕ:" FontSize="12" Margin="0,0,8,4" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                    <TextBlock x:Name="ElapsedTimeText" Grid.Row="0" Grid.Column="1" Text="вЂ”" FontSize="12" Margin="0,0,0,4" />

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="РЎРєРѕСЂРѕСЃС‚СЊ:" FontSize="12" Margin="0,0,8,4" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                    <TextBlock x:Name="SpeedText" Grid.Row="1" Grid.Column="1" Text="вЂ”" FontSize="12" Margin="0,0,0,4" />

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="РћСЃС‚Р°Р»РѕСЃСЊ:" FontSize="12" Margin="0,0,8,0" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                    <TextBlock x:Name="RemainingTimeText" Grid.Row="2" Grid.Column="1" Text="вЂ”" FontSize="12" />
                                </Grid>
                            </StackPanel>

                            <!-- РЎС‚Р°С‚РёСЃС‚РёРєР° РїРѕСЃР»Рµ Р·Р°РІРµСЂС€РµРЅРёСЏ -->
                            <StackPanel x:Name="TranscriptionStatsPanel" Spacing="4" Visibility="Collapsed">
                                <TextBlock Text="РЎС‚Р°С‚РёСЃС‚РёРєР°" FontSize="12" FontWeight="SemiBold" Margin="0,8,0,4" />
                                <TextBlock x:Name="TranscriptionStatsText" FontSize="11" Foreground="{ThemeResource TextFillColorSecondaryBrush}" TextWrapping="Wrap" />
                            </StackPanel>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Режим:" VerticalAlignment="Center" Margin="0,0,8,0" />
                                <ComboBox
                                    x:Name="TranscriptionModeComboBox"
                                    Grid.Column="1"
                                    SelectionChanged="OnTranscriptionModeChanged">
                                    <ComboBoxItem Content="Quality (точнее)" Tag="quality" />
                                    <ComboBoxItem Content="Light (быстрее)" Tag="light" />
                                </ComboBox>
                            </Grid>
                            <!-- РљРЅРѕРїРєР° СЂР°СЃС€РёС„СЂРѕРІРєРё -->
                            <Button
                                x:Name="TranscribeButton"
                                HorizontalAlignment="Stretch"
                                Click="OnTranscribeClicked"
                                Content="Р Р°СЃС€РёС„СЂРѕРІР°С‚СЊ" />

                            <!-- Whisper warning -->
                            <InfoBar
                                x:Name="WhisperWarningBar"
                                IsOpen="False"
                                Severity="Warning"
                                Title="Whisper РЅРµ РЅР°Р№РґРµРЅ"
                                Message="РЎРєР°С‡Р°Р№С‚Рµ faster-whisper-xxl" />

                            <Button
                                x:Name="DownloadRuntimeButton"
                                HorizontalAlignment="Stretch"
                                Click="OnDownloadRuntimeClicked"
                                Content="РЎРєР°С‡Р°С‚СЊ РґРІРёР¶РѕРє Whisper XXL"
                                Visibility="Collapsed" />

                            <Button
                                x:Name="CancelRuntimeDownloadButton"
                                HorizontalAlignment="Stretch"
                                Click="OnCancelRuntimeDownloadClicked"
                                Content="РћС‚РјРµРЅРёС‚СЊ Р·Р°РіСЂСѓР·РєСѓ РґРІРёР¶РєР°"
                                Visibility="Collapsed" />

                            <ProgressBar
                                x:Name="RuntimeDownloadProgressBar"
                                Minimum="0"
                                Maximum="100"
                                Height="4"
                                Visibility="Collapsed" />

                            <TextBlock
                                x:Name="RuntimeDownloadStatusText"
                                FontSize="11"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                TextWrapping="Wrap"
                                Visibility="Collapsed" />

                            <Button
                                x:Name="DownloadModelButton"
                                HorizontalAlignment="Stretch"
                                Click="OnDownloadModelClicked"
                                Content="РЎРєР°С‡Р°С‚СЊ РјРѕРґРµР»СЊ Whisper"
                                Visibility="Collapsed" />

                            <Button
                                x:Name="CancelModelDownloadButton"
                                HorizontalAlignment="Stretch"
                                Click="OnCancelModelDownloadClicked"
                                Content="РћС‚РјРµРЅРёС‚СЊ Р·Р°РіСЂСѓР·РєСѓ РјРѕРґРµР»Рё"
                                Visibility="Collapsed" />

                            <ProgressBar
                                x:Name="ModelDownloadProgressBar"
                                Minimum="0"
                                Maximum="100"
                                Height="4"
                                Visibility="Collapsed" />

                            <TextBlock
                                x:Name="ModelDownloadStatusText"
                                FontSize="11"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                TextWrapping="Wrap"
                                Visibility="Collapsed" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- РљРѕР»РѕРЅРєР° 3: РџР°РЅРµР»СЊ С‚СЂР°РЅСЃРєСЂРёРїС†РёРё -->
            <Border
                Grid.Column="3"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1,0,0,0"
                Padding="16">
                <Grid RowSpacing="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Р—Р°РіРѕР»РѕРІРѕРє СЃ РєРЅРѕРїРєРѕР№ СЃРѕС…СЂР°РЅРµРЅРёСЏ -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="Р Р°СЃС€РёС„СЂРѕРІРєР°"
                            VerticalAlignment="Center" />
                        <Button
                            x:Name="SaveTranscriptionButton"
                            Grid.Column="1"
                            Click="OnSaveTranscriptionClicked"
                            Visibility="Collapsed"
                            Padding="8,4"
                            ToolTipService.ToolTip="РЎРѕС…СЂР°РЅРёС‚СЊ РёР·РјРµРЅРµРЅРёСЏ">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <Ellipse
                                    x:Name="SaveIndicator"
                                    Width="8"
                                    Height="8"
                                    Fill="#4CAF50"
                                    VerticalAlignment="Center" />
                                <FontIcon
                                    Glyph="&#xE74E;"
                                    FontSize="14" />
                            </StackPanel>
                        </Button>
                    </Grid>

                    <!-- РЎРїРёСЃРѕРє СЃРїРёРєРµСЂРѕРІ (СЂРµРґР°РєС‚РёСЂСѓРµРјС‹Рµ РёРјРµРЅР°) -->
                    <StackPanel
                        x:Name="SpeakersPanel"
                        Grid.Row="1"
                        Spacing="8"
                        Visibility="Collapsed">
                        <TextBlock
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Text="РЎРїРёРєРµСЂС‹ (РґРІРѕР№РЅРѕР№ РєР»РёРє РґР»СЏ СЂРµРґР°РєС‚РёСЂРѕРІР°РЅРёСЏ)" />
                        <ItemsRepeater
                            x:Name="SpeakersRepeater"
                            ItemsSource="{x:Bind Speakers, Mode=OneWay}">
                            <ItemsRepeater.Layout>
                                <StackLayout Orientation="Horizontal" Spacing="8" />
                            </ItemsRepeater.Layout>
                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate x:DataType="views:SpeakerViewModel">
                                    <Border
                                        Background="{ThemeResource AccentFillColorDefaultBrush}"
                                        CornerRadius="4"
                                        Padding="8,4">
                                        <TextBox
                                            Text="{x:Bind Name, Mode=TwoWay}"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Foreground="White"
                                            FontSize="12"
                                            MinWidth="80"
                                            TextChanged="OnSpeakerNameChanged" />
                                    </Border>
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>
                    </StackPanel>

                    <!-- РЎРїРёСЃРѕРє СЃРµРіРјРµРЅС‚РѕРІ С‚СЂР°РЅСЃРєСЂРёРїС†РёРё -->
                    <ListView
                        x:Name="TranscriptionListView"
                        Grid.Row="2"
                        ItemsSource="{x:Bind TranscriptionSegments, Mode=OneWay}"
                        SelectionMode="None">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="Margin" Value="0,2" />
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="views:TranscriptionSegmentViewModel">
                                <Grid ColumnSpacing="12" Padding="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50" />
                                        <ColumnDefinition Width="Auto" MinWidth="60" MaxWidth="100" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Timestamp (РєР»РёРєР°Р±РµР»СЊРЅС‹Р№) -->
                                    <Button
                                        Grid.Column="0"
                                        Content="{x:Bind TimestampDisplay}"
                                        Click="OnTimestampClicked"
                                        Tag="{x:Bind}"
                                        Padding="4,2"
                                        FontSize="11"
                                        FontFamily="Consolas"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Left"
                                        ToolTipService.ToolTip="Р’РѕСЃРїСЂРѕРёР·РІРµСЃС‚Рё СЃРµРіРјРµРЅС‚ (РєР»РёРє)" />

                                    <!-- Speaker (СЃ РєРѕРЅС‚РµРєСЃС‚РЅС‹Рј РјРµРЅСЋ) -->
                                    <Border
                                        Grid.Column="1"
                                        Background="{ThemeResource AccentFillColorDefaultBrush}"
