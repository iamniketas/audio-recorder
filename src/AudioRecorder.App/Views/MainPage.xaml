<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="AudioRecorder.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AudioRecorder"
    xmlns:views="using:AudioRecorder.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <!-- Левая панель настроек (сворачиваемая) -->
                <ColumnDefinition x:Name="SettingsColumn" Width="280" />
                <!-- Кнопка сворачивания -->
                <ColumnDefinition Width="Auto" />
                <!-- Центральная панель управления -->
                <ColumnDefinition Width="320" />
                <!-- Правая панель транскрипции -->
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Колонка 0: Панель настроек -->
            <Border
                x:Name="SettingsPanel"
                Grid.Column="0"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,0,1,0"
                Padding="16">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="16">
                        <TextBlock
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="Настройки" />

                        <!-- Папка сохранения -->
                        <StackPanel Spacing="4">
                            <TextBlock
                                FontSize="12"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="Папка для записей" />
                            <Grid ColumnSpacing="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    x:Name="OutputFolderTextBox"
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Text="..."
                                    TextTrimming="CharacterEllipsis"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <Button
                                    Grid.Column="1"
                                    Click="OnSelectFolderClicked"
                                    Content="..."
                                    Padding="8,4"
                                    ToolTipService.ToolTip="Выбрать папку" />
                            </Grid>
                        </StackPanel>

                        <!-- Источники ВЫВОДА -->
                        <StackPanel Spacing="4">
                            <TextBlock
                                FontSize="12"
                                FontWeight="SemiBold"
                                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                Text="Вывод (системный звук)" />
                            <Border
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                MaxHeight="120">
                                <ListView
                                    x:Name="OutputSourcesListView"
                                    SelectionMode="None"
                                    ItemsSource="{x:Bind OutputSources, Mode=OneWay}">
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="Padding" Value="4,2" />
                                            <Setter Property="MinHeight" Value="32" />
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                    <ListView.ItemTemplate>
                                        <DataTemplate x:DataType="views:AudioSourceViewModel">
                                            <CheckBox
                                                IsChecked="{x:Bind IsSelected, Mode=TwoWay}"
                                                Checked="OnSourceSelectionChanged"
                                                Unchecked="OnSourceSelectionChanged"
                                                MaxWidth="220"
                                                ToolTipService.ToolTip="{x:Bind Source.Name}">
                                                <TextBlock
                                                    Text="{x:Bind Source.Name}"
                                                    TextTrimming="CharacterEllipsis"
                                                    MaxWidth="180" />
                                            </CheckBox>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Border>
                        </StackPanel>

                        <!-- Источники ВВОДА -->
                        <StackPanel Spacing="4">
                            <TextBlock
                                FontSize="12"
                                FontWeight="SemiBold"
                                Foreground="{ThemeResource AccentTextFillColorSecondaryBrush}"
                                Text="Ввод (микрофоны)" />
                            <Border
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                MaxHeight="120">
                                <ListView
                                    x:Name="InputSourcesListView"
                                    SelectionMode="None"
                                    ItemsSource="{x:Bind InputSources, Mode=OneWay}">
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="Padding" Value="4,2" />
                                            <Setter Property="MinHeight" Value="32" />
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                    <ListView.ItemTemplate>
                                        <DataTemplate x:DataType="views:AudioSourceViewModel">
                                            <CheckBox
                                                IsChecked="{x:Bind IsSelected, Mode=TwoWay}"
                                                Checked="OnSourceSelectionChanged"
                                                Unchecked="OnSourceSelectionChanged"
                                                MaxWidth="220"
                                                ToolTipService.ToolTip="{x:Bind Source.Name}">
                                                <TextBlock
                                                    Text="{x:Bind Source.Name}"
                                                    TextTrimming="CharacterEllipsis"
                                                    MaxWidth="180" />
                                            </CheckBox>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Border>
                        </StackPanel>

                        <!-- Обновления приложения -->
                        <StackPanel Spacing="8">
                            <TextBlock
                                FontSize="12"
                                FontWeight="SemiBold"
                                Text="Обновления" />

                            <Button
                                x:Name="CheckUpdatesButton"
                                Click="OnCheckUpdatesClicked"
                                Content="Проверить обновления" />

                            <ProgressBar
                                x:Name="UpdateProgressBar"
                                Minimum="0"
                                Maximum="100"
                                Height="4"
                                Visibility="Collapsed" />

                            <TextBlock
                                x:Name="UpdateStatusText"
                                FontSize="11"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="Статус: не проверялось"
                                TextWrapping="Wrap" />

                            <Button
                                x:Name="ApplyUpdateButton"
                                Click="OnApplyUpdateClicked"
                                Content="Установить обновление"
                                Visibility="Collapsed"
                                Style="{StaticResource AccentButtonStyle}" />
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Колонка 1: Кнопка сворачивания -->
            <ToggleButton
                x:Name="ToggleSettingsButton"
                Grid.Column="1"
                VerticalAlignment="Center"
                Click="OnToggleSettingsClicked"
                Content="«"
                ToolTipService.ToolTip="Свернуть/развернуть настройки"
                Width="24"
                Padding="0"
                Background="Transparent"
                BorderThickness="0" />

            <!-- Колонка 2: Панель управления -->
            <Border
                Grid.Column="2"
                Padding="16">
                <StackPanel Spacing="16">
                    <TextBlock
                        FontSize="20"
                        FontWeight="SemiBold"
                        Text="Contora" />

                    <!-- Статус записи -->
                    <Border
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="12">
                        <StackPanel Spacing="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,8,4" Text="Статус:" />
                                <TextBlock x:Name="StateTextBlock" Grid.Row="0" Grid.Column="1" Margin="0,0,0,4" FontWeight="SemiBold" Text="Остановлено" />

                                <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,8,4" Text="Время:" />
                                <TextBlock x:Name="DurationTextBlock" Grid.Row="1" Grid.Column="1" Margin="0,0,0,4" Text="00:00:00" />

                                <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,0,8,0" Text="Размер:" />
                                <TextBlock x:Name="FileSizeTextBlock" Grid.Row="2" Grid.Column="1" Text="0 MB" />
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Имя текущего файла -->
                    <TextBlock
                        x:Name="CurrentFileTextBlock"
                        FontSize="12"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Text=""
                        TextTrimming="CharacterEllipsis"
                        ToolTipService.ToolTip="{x:Bind CurrentFileTextBlock.Text, Mode=OneWay}" />

                    <!-- Кнопки записи -->
                    <Grid ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Button
                            x:Name="StartStopButton"
                            Grid.Column="0"
                            HorizontalAlignment="Stretch"
                            Click="OnStartStopClicked"
                            Content="Начать запись"
                            IsEnabled="False"
                            Style="{StaticResource AccentButtonStyle}" />

                        <Button
                            x:Name="PauseResumeButton"
                            Grid.Column="1"
                            HorizontalAlignment="Stretch"
                            Click="OnPauseResumeClicked"
                            Content="Пауза"
                            IsEnabled="False" />
                    </Grid>

                    <!-- Импорт файла -->
                    <Button
                        x:Name="ImportButton"
                        HorizontalAlignment="Stretch"
                        Click="OnImportClicked"
                        Content="Импортировать файл" />

                    <!-- Секция транскрипции -->
                    <Border
                        x:Name="TranscriptionControlSection"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="12"
                        Visibility="Collapsed">
                        <StackPanel Spacing="8">
                            <TextBlock FontSize="14" FontWeight="Medium" Text="Транскрипция" />

                            <!-- Прогресс -->
                            <StackPanel x:Name="TranscriptionProgressPanel" Spacing="8" Visibility="Collapsed">
                                <ProgressBar
                                    x:Name="TranscriptionProgressBar"
                                    Minimum="0"
                                    Maximum="100"
                                    IsIndeterminate="True"
                                    Height="4" />

                                <!-- Основной статус -->
                                <TextBlock
                                    x:Name="TranscriptionStatusText"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Text="Подготовка..." />

                                <!-- Детальная информация -->
                                <Grid x:Name="TranscriptionDetailsGrid" Visibility="Collapsed">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Прошло:" FontSize="12" Margin="0,0,8,4" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                    <TextBlock x:Name="ElapsedTimeText" Grid.Row="0" Grid.Column="1" Text="—" FontSize="12" Margin="0,0,0,4" />

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Скорость:" FontSize="12" Margin="0,0,8,4" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                    <TextBlock x:Name="SpeedText" Grid.Row="1" Grid.Column="1" Text="—" FontSize="12" Margin="0,0,0,4" />

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Осталось:" FontSize="12" Margin="0,0,8,0" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                    <TextBlock x:Name="RemainingTimeText" Grid.Row="2" Grid.Column="1" Text="—" FontSize="12" />
                                </Grid>
                            </StackPanel>

                            <!-- Статистика после завершения -->
                            <StackPanel x:Name="TranscriptionStatsPanel" Spacing="4" Visibility="Collapsed">
                                <TextBlock Text="Статистика" FontSize="12" FontWeight="SemiBold" Margin="0,8,0,4" />
                                <TextBlock x:Name="TranscriptionStatsText" FontSize="11" Foreground="{ThemeResource TextFillColorSecondaryBrush}" TextWrapping="Wrap" />
                            </StackPanel>

                            <!-- Кнопка расшифровки -->
                            <Button
                                x:Name="TranscribeButton"
                                HorizontalAlignment="Stretch"
                                Click="OnTranscribeClicked"
                                Content="Расшифровать" />

                            <!-- Whisper warning -->
                            <InfoBar
                                x:Name="WhisperWarningBar"
                                IsOpen="False"
                                Severity="Warning"
                                Title="Whisper не найден"
                                Message="Скачайте faster-whisper-xxl" />

                            <Button
                                x:Name="DownloadRuntimeButton"
                                HorizontalAlignment="Stretch"
                                Click="OnDownloadRuntimeClicked"
                                Content="Скачать движок Whisper XXL"
                                Visibility="Collapsed" />

                            <Button
                                x:Name="CancelRuntimeDownloadButton"
                                HorizontalAlignment="Stretch"
                                Click="OnCancelRuntimeDownloadClicked"
                                Content="Отменить загрузку движка"
                                Visibility="Collapsed" />

                            <ProgressBar
                                x:Name="RuntimeDownloadProgressBar"
                                Minimum="0"
                                Maximum="100"
                                Height="4"
                                Visibility="Collapsed" />

                            <TextBlock
                                x:Name="RuntimeDownloadStatusText"
                                FontSize="11"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                TextWrapping="Wrap"
                                Visibility="Collapsed" />

                            <Button
                                x:Name="DownloadModelButton"
                                HorizontalAlignment="Stretch"
                                Click="OnDownloadModelClicked"
                                Content="Скачать модель Whisper"
                                Visibility="Collapsed" />

                            <Button
                                x:Name="CancelModelDownloadButton"
                                HorizontalAlignment="Stretch"
                                Click="OnCancelModelDownloadClicked"
                                Content="Отменить загрузку модели"
                                Visibility="Collapsed" />

                            <ProgressBar
                                x:Name="ModelDownloadProgressBar"
                                Minimum="0"
                                Maximum="100"
                                Height="4"
                                Visibility="Collapsed" />

                            <TextBlock
                                x:Name="ModelDownloadStatusText"
                                FontSize="11"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                TextWrapping="Wrap"
                                Visibility="Collapsed" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Колонка 3: Панель транскрипции -->
            <Border
                Grid.Column="3"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1,0,0,0"
                Padding="16">
                <Grid RowSpacing="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Заголовок с кнопкой сохранения -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="Расшифровка"
                            VerticalAlignment="Center" />
                        <Button
                            x:Name="SaveTranscriptionButton"
                            Grid.Column="1"
                            Click="OnSaveTranscriptionClicked"
                            Visibility="Collapsed"
                            Padding="8,4"
                            ToolTipService.ToolTip="Сохранить изменения">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <Ellipse
                                    x:Name="SaveIndicator"
                                    Width="8"
                                    Height="8"
                                    Fill="#4CAF50"
                                    VerticalAlignment="Center" />
                                <FontIcon
                                    Glyph="&#xE74E;"
                                    FontSize="14" />
                            </StackPanel>
                        </Button>
                    </Grid>

                    <!-- Список спикеров (редактируемые имена) -->
                    <StackPanel
                        x:Name="SpeakersPanel"
                        Grid.Row="1"
                        Spacing="8"
                        Visibility="Collapsed">
                        <TextBlock
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Text="Спикеры (двойной клик для редактирования)" />
                        <ItemsRepeater
                            x:Name="SpeakersRepeater"
                            ItemsSource="{x:Bind Speakers, Mode=OneWay}">
                            <ItemsRepeater.Layout>
                                <StackLayout Orientation="Horizontal" Spacing="8" />
                            </ItemsRepeater.Layout>
                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate x:DataType="views:SpeakerViewModel">
                                    <Border
                                        Background="{ThemeResource AccentFillColorDefaultBrush}"
                                        CornerRadius="4"
                                        Padding="8,4">
                                        <TextBox
                                            Text="{x:Bind Name, Mode=TwoWay}"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Foreground="White"
                                            FontSize="12"
                                            MinWidth="80"
                                            TextChanged="OnSpeakerNameChanged" />
                                    </Border>
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>
                    </StackPanel>

                    <!-- Список сегментов транскрипции -->
                    <ListView
                        x:Name="TranscriptionListView"
                        Grid.Row="2"
                        ItemsSource="{x:Bind TranscriptionSegments, Mode=OneWay}"
                        SelectionMode="None">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="Margin" Value="0,2" />
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="views:TranscriptionSegmentViewModel">
                                <Grid ColumnSpacing="12" Padding="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50" />
                                        <ColumnDefinition Width="Auto" MinWidth="60" MaxWidth="100" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Timestamp (кликабельный) -->
                                    <Button
                                        Grid.Column="0"
                                        Content="{x:Bind TimestampDisplay}"
                                        Click="OnTimestampClicked"
                                        Tag="{x:Bind}"
                                        Padding="4,2"
                                        FontSize="11"
                                        FontFamily="Consolas"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Left"
                                        ToolTipService.ToolTip="Воспроизвести сегмент (клик)" />

                                    <!-- Speaker (с контекстным меню) -->
                                    <Border
                                        Grid.Column="1"
                                        Background="{ThemeResource AccentFillColorDefaultBrush}"
                                        CornerRadius="4"
                                        Padding="6,2"
                                        VerticalAlignment="Top"
                                        RightTapped="OnSpeakerRightTapped"
                                        Tag="{x:Bind}">
                                        <Border.ContextFlyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem
                                                    Text="Переименовать спикера"
                                                    Click="OnRenameSpeakerClicked"
                                                    Tag="{x:Bind}" />
                                            </MenuFlyout>
                                        </Border.ContextFlyout>
                                        <TextBlock
                                            Text="{x:Bind SpeakerName, Mode=OneWay}"
                                            FontSize="11"
                                            FontWeight="SemiBold"
                                            Foreground="White"
                                            TextTrimming="CharacterEllipsis"
                                            ToolTipService.ToolTip="ПКМ для переименования" />
                                    </Border>

                                    <!-- Text (редактируемый) -->
                                    <TextBox
                                        Grid.Column="2"
                                        Text="{x:Bind Text, Mode=TwoWay}"
                                        TextWrapping="Wrap"
                                        AcceptsReturn="False"
                                        BorderThickness="0"
                                        Background="Transparent"
                                        FontSize="13"
                                        VerticalAlignment="Top"
                                        Padding="4,2"
                                        TextChanged="OnSegmentTextChanged"
                                        Tag="{x:Bind}" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                </Grid>
            </Border>
        </Grid>
    </Page.Content>
</Page>
